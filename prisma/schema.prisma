generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String 
  bio String @default("My bio") 
  img String @default("https://img.freepik.com/free-psd/contact-icon-illustration-isolated_23-2151903337.jpg?t=st=1736026206~exp=1736029806~hmac=f1db3970e1bc3f35afa63950ba189ff9eb6b1e1fe0f0059e01ce0b93be021f46&w=826")

  recipe recipe[]
  view userView[]
  like like[]
  favorite favorites[]
}

model recipe{
  id Int @id @default(autoincrement())
  name String @unique
  description String
  imgUrl String
  createdAt DateTime @default(now())

  userId Int
  user user @relation(fields: [userId],references: [id])

  view userView[]
  like like[]
  favorite favorites[]
  tag RecipeTags[]
}

model userView{
  recipeId Int
  userId Int
  view Int @default(1)
  @@id([recipeId,userId])

  user user @relation(fields: [userId],references: [id])
  recipe recipe @relation(fields: [recipeId],references: [id])
}

model like{
  recipeId Int
  userId Int
  liked Boolean @default(true)
  @@id([recipeId,userId])

  user user @relation(fields: [userId],references: [id])
  recipe recipe @relation(fields: [recipeId],references: [id])
}

model favorites{
  recipeId Int
  userId Int
  bookmarked Boolean @default(true)
  @@id([recipeId,userId])

  user user @relation(fields: [userId],references: [id])
  recipe recipe @relation(fields: [recipeId],references: [id])
}

model tags{
  id Int @id @default(autoincrement())
  name String @unique

  recipe RecipeTags[]
}

model RecipeTags{
  tagId Int
  RecipeId Int
  @@id([tagId,RecipeId])
  linked Boolean
  tag tags @relation(fields: [tagId],references: [id])
  recipe recipe @relation(fields: [RecipeId],references: [id])
}
